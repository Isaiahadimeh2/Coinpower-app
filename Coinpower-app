    <script>
        // --- 1. FIREBASE CONFIGURATION ---
        // REPLACE THESE WITH YOUR ACTUAL KEYS FROM FIREBASE CONSOLE
        const firebaseConfig = {
            apiKey: "YOUR_API_KEY",
            authDomain: "YOUR_PROJECT.firebaseapp.com",
            projectId: "YOUR_PROJECT_ID",
            storageBucket: "YOUR_PROJECT.appspot.com",
            messagingSenderId: "...",
            appId: "..."
        };

        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();

        // --- 2. REGISTRATION LOGIC ---
        async function register() {
            // Get values and trim whitespace
            const username = document.getElementById('reg-user').value.trim();
            const fname = document.getElementById('reg-fname').value.trim();
            const lname = document.getElementById('reg-lname').value.trim();
            const country = document.getElementById('reg-country').value;
            const phone = document.getElementById('reg-phone').value.trim();
            const pass = document.getElementById('reg-pass').value;
            const conf = document.getElementById('reg-confirm').value;

            // FIX: Logical OR (||) was missing in your original code validation
            if(!username || !fname || !lname || !phone || !pass || !country) {
                return alert("âš ï¸ Please fill in all fields!");
            }
            
            if(pass.length < 4) {
                return alert("âš ï¸ Password must be at least 4 characters.");
            }

            if(pass !== conf) {
                return alert("âš ï¸ Passwords do not match!");
            }

            try {
                // Check if user already exists
                const userRef = db.collection("users").doc(phone);
                const doc = await userRef.get();
                
                if (doc.exists) {
                    return alert("âŒ This phone number is already registered!");
                }

                // Create User Object
                const userData = {
                    username: username,
                    firstName: fname,
                    lastName: lname,
                    country: country,
                    phone: phone,
                    password: pass, // Note: In production, use Firebase Auth for security
                    balance: 1.0, 
                    plan: "PG1",
                    regDate: Date.now()
                };

                // Save to Firebase Firestore
                await userRef.set(userData);
                
                alert(`âœ… Welcome ${fname}! Registration Successful.`);
                showDashboard(userData);

            } catch (error) {
                console.error("Firebase Error:", error);
                alert("ğŸ“¡ Connection Error: " + error.message);
            }
        }

        // --- 3. UI NAVIGATION ---
        function showDashboard(userData) {
            document.getElementById('auth-page').classList.add('hidden');
            document.getElementById('dash-page').classList.remove('hidden');
            document.getElementById('user-display-name').innerText = userData.firstName;
        }
    </script>
